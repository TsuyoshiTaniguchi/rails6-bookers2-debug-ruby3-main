<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <% @books.each do |book| %>
    <tr id="book_<%= book.id %>">
      <td><%= link_to(book.user) do %>
        <%= image_tag book.user.get_profile_image, size:'50x50' %>
      <% end %></td>
      <td><%= link_to book.title, book, class: "book_#{book.id}" %></td>
      <td><%= book.body %></td>
      <td class="favorite-btn"><%= render "favorites/btn", book: book %></td>
      <td class="comments-count">コメント数: <%= book.book_comments.count %></td>
      <td class="likes-count">いいね数: <%= book.favorites.count %></td> <!-- いいね数を表示 -->
      <td class="views-count">閲覧数: <%= book.views_count %></td> <!-- 閲覧数を表示 -->
    </tr>
  <% end %>
  </tbody>
</table>
